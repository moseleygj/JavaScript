<script>
	var counter=0;
	var A;

var tog = 0;
function magic()
{

if (tog == 0)
	{ 
	tog=1;
	var numHold=parseInt(document.getElementById('MainNum').value);
	doMath(numHold);
	}

else {
doMath(A);
	}
}

function doMath(mainNumber)
	{
		A=mainNumber;
		if (A==0)
		{
			document.getElementById("numCurrent").innerHTML=0;
			alert("Complete!");
			return 0;
		}
		else
		{
		//send main number to remain counter
		remain(A);
			counter+=A;
			A--;
			document.getElementById("numCurrent").innerHTML=A + "!";
			alert(counter);
		}
	}
var remainHolder;
var remain;
var count=0;
var counterStarted=0;
//get main number;


function remain(startNum)
	{
	remainHolder= startNum;
	
	if(counterStarted==1)
	{
	return 0;
	}
	else {
	counterStarted=1;		
	//check if loops been run
	//run loop here;
		for (var i=startNum;i>0;i--)
		{
		parseInt(count+=i);
		alert("inner-loop Count: "+count);
		}
	alert("total:"+count);
	}
}
</script>
