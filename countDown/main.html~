<script>
	var counter=0;
	var A;

var tog = 0;
function magic()
{

if (tog == 0)
	{ 
	tog=1;
	var numHold=parseInt(document.getElementById('MainNum').value);
	doMath(numHold);
	}

else {
doMath(A);
	}
}

function doMath(mainNumber)
	{
		A=mainNumber;
		if (A==0)
		{
			document.getElementById("numCurrent").innerHTML=0;
			alert("Complete!");
			return 0;
		}
		else
		{
		//send main number to remain counter
		grandTotal(A);
			counter+=A;
			A--;
			document.getElementById("numCurrent").innerHTML=A;
			alert("Amount Completed: "+counter);
		}
	}
var remainHolder;
var remain;
var count=0;
var counterStarted=0;
//get main number;
var countDownTotal;

function grandTotal(startNum)
	{
	remainHolder= startNum;
	
	if(counterStarted==1)	//check if loop has been run. 0=no,1=yes;
	{
	countDown();
	//start counting (deduction)
	}
	else {
	counterStarted=1;		

	//run counting loop here;
		for (var i=startNum;i>0;i--)
		{
		parseInt(count+=i);
		}
	alert("total:"+count);
	//pass total to countdown function to do more math
	countDownTotal=count;
	
	}
}

//get value and place it in a global variable for function countdown()) to use
function countDown() {
	countdownTotal-=parseInt(document.getElementById("numCurrent").innerHTML);
alert("Amount Remaining:"+countDownTotal);
}
</script>
