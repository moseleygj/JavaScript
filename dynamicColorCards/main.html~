<script type="text/javascript">
var colors;
function color(){
 for (i= 1;i<5;i++)
  {
   var num =Math.floor(Math.random()*10)+1;
   colors = dynamicColor(num);   
   if (colors=="#222222"|| colors=="blue"|| colors=="#009B2C"|| colors== 
"violet"){
      document.getElementById("card"+i).style.backgroundColor=colors;
      document.getElementById("card"+i).style.borderColor="white";
   }
   document.getElementById("card"+i).style.backgroundColor=colors;

 }
}

function dynamicColor(n)
{
switch(n){
case 1:
return "#BD0000";
break;
case 2:
return "#FC6805";
break;
case 3:
return  "yellow";
break;
case 4:
return   "#009B2C";
break;
case 5:
return  "blue";
break;
case 6:
return  "indigo";
break;
case 7:
return  "violet";
break;
case 8:
return   "#222222";
break;
case 9:
return  "#009B2C";
break;

}

}

</script>
